<%= link_to "Back to Products", products_url %> | <%= link_to "Edit", edit_product_path(@product) %>
| <%= link_to "Delete", @product, method: :delete, data: {confirm: "Are you sure you want to delete this product?"}%>

<p><%= @product.name %></p>
<p> <%= @product.description %> </p>
<p> <%= @product.formatted_price %> </p>

<h3>Reviews:</h3>
  <p><%= @product.name %></p>

  <% @product.reviews.each do |review| %>
    <p>
      <%= review.comment %>
      <br>
      <% if review.user != nil %>
        <em>by <%= review.user.name %></em>
        Added on: <%= review.created_at %>
      <% end %>
    </p>
  <% end %>

<% if current_user %>
  <h4>New Comment:</h4>

    <%= form_for([@product, @review]) do |f| %>
      <% if @review.errors.any? %>
        <div id = "error_explained">
          <p><%= pluralize(@review.errors.count, "error") %></p>
          <ul>
            <% @review.errors.full_messages.each do |message| %>
              <li><% message %></li>
              <% end %>
          </ul>
        </div>
      <% end %>

      <div class = "field">
        <%= f.label :comment %> <br>
        <%= f.text_area :comment %>
      </div>

      <div class = "actions">
        <%= f.submit %>
      </div>

      <% end %>

      <% else %>
        <p>Please <%= link_to "log in", new_session_path %> to make a comment.</p>
      <% end %>
